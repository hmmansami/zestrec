{
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npx prisma generate && next build",
  "framework": "nextjs",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": ""
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors https://*.myshopify.com https://admin.shopify.com;"
        }
      ]
    }
  ]
}
